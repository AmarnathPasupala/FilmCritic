<%layout("/layouts/boilerplate.ejs") %>
<body>
    <div class="container">
        <div class="row">
           <div class="col-10 offset-1">
            <form class="needs-validation" novalidate action="/listings" method="post" enctype="multipart/form-data" >
                <div>
                    <label class="from-label" for="image">Upload Image</label>
                    <input class="form-control" type="file" placeholder="Upload Image" name="listing[image]" id="image" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Paste Image Address URL
                    </div>                    
                </div><br>
                <div>
                    <label class="from-label" for="name">Movie Name</label>
                    <input class="form-control" type="text" placeholder="Movie Name" name="listing[name]" id="name" required>
                                     
                </div><br>
                <div>
                    <label class="from-label" for="year">Year</label>
                    <input class="form-control" type="text" placeholder="Year" name="listing[year]" id="year" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter Movie Year
                    </div>                   
                </div><br>
                <div>
                    <label class="from-label" for="genre">Genre</label>
                    <input class="form-control" type="text" placeholder="Genre" name="listing[genre]" id="genre" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter Genre
                    </div>                    
                </div><br>
                <div >
                    <label class="from-label" for="cast">Cast</label>
                    <input class="form-control" type="text" placeholder="Cast" name="listing[cast]" id="cast" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter Cast
                    </div>                   
                </div ><br>
                <div>
                    <label class="from-label" for="director">Director</label>
                    <input class="form-control" type="text" placeholder="Director" name="listing[director]" id="director" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter Director Name
                    </div>                   
                </div><br>
                <button class="btn btn-success" >Add</button>
            </form> 
           </div>
        </div>
    </div>   
</body>
